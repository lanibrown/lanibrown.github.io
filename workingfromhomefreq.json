{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
      "text": "People Working From Home",
      "subtitle":"The percentage of people reported in each working from home status. Source: ONS, April 2020",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"},
  "data": {"url": "https://raw.githubusercontent.com/lanibrown/lanibrown.github.io/main/Homeworking.csv"},
  "height": 400,
  "width": {"step": 12},
  "mark": "bar",
  "encoding": {
    "column": {
      "field": "Category", "type": "ordinal", "spacing": 30,
      "header": {"orient": "bottom"}
    },
    "y": {
      "field": "WorkingFromHome",
      "title": "Percentage",
      "type": "quantitative",
      "axis": {"grid": false}
    },
    "x": {
      "field": "Year",
      "axis": null
    },
    "color": {
      "field": "Year",
      "scale": {"range": ["#ca8861","#ca8861","#ca8861","#ca8861","#ca8861", "#ca8861", "#ca8861", "#ca8861", "#ca8861", "#675193"]}
      
    }
  },
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {"domainWidth": 1}
  }
}
