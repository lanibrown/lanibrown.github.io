{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/lanibrown/lanibrown.github.io/main/PEW%20Research%20WFH.csv"
  },
    "title": {
    "text": "People Working From Home US (%)",
    "subtitle": "The percentage of people in each working from home status in the US around the first COVID wave. Source: PEW",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "width": {"step": 30},
  "mark": "bar",
  "encoding": {
    "column": {
      "field": "Category",
      "type": "ordinal",
      "spacing": 10,
      "header": {"orient": "bottom"}
    },
    "y": {
      "aggregate": "sum",
      "field": "Number",
      "title": "Percentage",
      "axis": {"grid": false}
    },
    "x": {"field": "Year", "title": "Category", "axis": null, "sort": "-x"},
    "color": {"field": "Year", "scale": {"scheme": "redyellowgreen"}, "sort": "x"}
  },
  "config": {"view": {"stroke": "transparent"}, "axis": {"domainWidth": 1}}
}
